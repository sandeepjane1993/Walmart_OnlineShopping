<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity">

    <EditText
        android:id="@+id/et_deliveryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="30dp"
        android:hint="Add Delivery Address"
        app:layout_constraintBottom_toTopOf="@+id/et_BillingAddress"
        app:layout_constraintEnd_toEndOf="@+id/btn_payPal"
        app:layout_constraintStart_toStartOf="@+id/btn_payPal"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_BillingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:hint="Add Billing Address"
        app:layout_constraintBottom_toTopOf="@+id/btn_payPal"
        app:layout_constraintStart_toStartOf="@+id/et_deliveryAddress"
        app:layout_constraintTop_toBottomOf="@+id/et_deliveryAddress" />

    <Button
        android:id="@+id/btn_payPal"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="254dp"
        android:background="@drawable/button_curved"
        android:text="Pay with PayPal"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_BillingAddress" />

</android.support.constraint.ConstraintLayout>