<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/tv_productName_PD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Product Name"
            android:textSize="25sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


        <RatingBar
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_gravity="center"
                android:text="25 reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <Button
                android:text="Free Shipping"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/button_viewdepartment"/>
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <Button
                android:text="New"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_viewdepartment"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <ImageView
            android:id="@+id/iv_pImage_PD"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/pic_vf_clothing" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tv_price_PD"
            android:paddingLeft="20dp"
            android:text="$1000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:paddingLeft="20dp"
            android:text="2 day shipping"
            android:textColor="#0d870d"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/btn_addToCart_PD"
            android:layout_gravity="center"
            android:text="Add to Cart"
            android:background="@drawable/button_curved"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:text="Description"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <TextView
            android:id="@+id/tv_productDescription_PD"
            android:text="text"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <Button
            android:layout_gravity="center"
            android:text="Go to Cart"
            android:textAllCaps="false"
            android:id="@+id/btn_goToCart"
            android:background="@drawable/button_curved"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </LinearLayout>


</ScrollView>